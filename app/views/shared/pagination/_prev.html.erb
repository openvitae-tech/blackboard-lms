<% if (prev_path = path_to_previous_page(items)) %>
  <div class="w-fit">
    <%= link_to prev_path do %>
      <%= button_component(
            text: 'Previous',
            type: 'outline',
            icon_name: 'chevron-left'
          ) %>
    <% end %>
  </div>
<% else %>
  <div class="w-fit hidden md:block">
    <%= button_component(
          text: 'Previous',
          type: 'outline',
          icon_name: 'chevron-left',
          disabled: true
        ) %>
  </div>
<% end %>
