<%= turbo_frame_tag 'modal' do %>
  <div class="modal fixed inset-0 bg-black bg-opacity-75 z-[9999]" data-controller="modals" data-modals-target="modalBox">
    <div class= "flex items-center justify-center min-h-screen ">
      <div class="bg-white rounded shadow-md  w-[326px] md:w-[462px]">
        <div class="modal-header border-b border-line-colour-light flex justify-between p-6">
          <h2 class="heading heading-semibold"><%= modalTitle %></h2>
          <button type="button" data-action="click->modals#closeModal">
            <span class="icon icon-close icon-base bg-letter-color"></span>
          </button>
        </div>

        <div class="modal-body">
          <%= yield %>
        </div>
      </div>
    </div>
  </div>
<% end %>