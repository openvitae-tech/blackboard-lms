<% if tooltip_text.present? %>
  <%= render 'shared/components/tooltip', tooltip_text: tooltip_text do %>
    <button class="flex items-center gap-2 rounded px-4 py-2 border border-danger heading">
      <span class="text-sm text-danger"><%= label %></span>
    </button>
  <% end %>
<% else %>
  <button class="flex items-center gap-2 rounded px-4 py-2 border border-danger heading">
    <span class="text-sm text-danger"><%= label %></span>
  </button>
<% end %>