<div id="invite-user-popup" class="fixed inset-0 bg-black bg-opacity-80 flex items-center justify-center hidden ">
   <div class="bg-white rounded-lg shadow-lg w-[462px]">
      <div class="flex items-center justify-between border-b p-6">
         <span class="text-base font-semibold">Invite User</span>
         <button id="cancel-btn-user" type="button">          
         <span class="icon icon-close h-4 w-4"></span>
         </button>
      </div>
      <form class="flex flex-col gap-6 p-6">
         <div class="flex flex-col gap-4">
            <label class="block  text-sm" for="email">Email</label>
            <input type="email" id="email" class="w-full px-3 py-2 border rounded" placeholder="Enter email">
         </div>
         <div class="flex flex-col gap-4">
            <label class="block text-sm" for="role">Select Role</label>
            <select id="role" class="w-full px-3 py-2 border rounded">
               <option class="flex gap-2">
                  <span class="icon icon-user-gray h-4 w-4"></span>
                  <span class="text-primary text-xs font-medium">Manager</span>
               </option>
               <option>Learner</option>
            </select>
         </div>
         <div id="upload-csv"></div>
         <div class="flex flex-col justify-between">
            <button type="button" class="bg-primary text-white px-4 py-2 rounded">Invite User</button>
            <button id="user-cancel-btn" type="button" class=" px-4 py-2">Cancel</button>
         </div>
      </form>
   </div>
</div>