<% submitButtonLabel ||= "OK" %>
<div class="fixed inset-0 bg-black bg-opacity-80 flex items-center justify-center z-[9999]" data-controller="modals" data-modals-target="modalBox" data-action="turbo:submit-end->modals#closeModal">
  <div class="bg-white rounded-lg w-[326px] md:w-[462px] md:relative">
    <div class="p-2">
      <div class="flex items-center justify-between p-4 mb-0">
        <span class="text-lg font-semibold"><%= title %></span>
        <button data-action="click->modals#closeModal">
          <span class="icon icon-close icon-small"></span>
        </button>
      </div>
      <div class="p-4 pt-2">
        <p class="text-sm text-gray-700">
          <%= description %>
        </p>
      </div>
    </div>
    <div class="flex justify-end gap-4 border-t border-line-colour-light p-4">
      <button class="text-black px-4 py-2 rounded text-sm" data-action="click->modals#closeModal">
        Cancel
      </button>
      <%= button_to submitButtonLabel, record, method:, class: "text-white px-4 py-2 rounded text-sm bg-danger" %>
    </div>
  </div>
</div>
