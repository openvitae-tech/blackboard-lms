<aside class="bg-primary-light-50 sticky top-0 flex h-screen min-w-64 flex-col">
  <div class="h-full pt-8">
    <%= image_tag 'instruo_logo_blue_small.png', alt: 'Instruo', class: 'h-6 pe-24 ps-8' %>
    <div class="flex h-full flex-col justify-between pt-14">
      <ul class="flex flex-col gap-3">
        <% if policy(:dashboard).index? %>
          <li class="side-bar-item <%= 'item-selected' if 'Home' == 'Home' %>">
            <%= link_to dashboards_path, class: "side-bar-item-inner" do %>
              <svg class="icon icon-small">
                <use href="<%= asset_path('icons.svg') %>#home"></use>
              </svg>
              <span class="">Home</span>
            <% end %>
          </li>
        <% end %>
        <% if policy(:learning_partner).show? %>
          <li class="side-bar-item <%= 'item-selected' if 'teams' == 'Partners' %>">
            <%= link_to learning_partners_path, class: "side-bar-item-inner" do %>
              <svg class="icon icon-small">
                <use href="<%= asset_path('icons.svg') %>#course"></use>
              </svg>
              <span class="">Partners</span>
            <% end %>
          </li>
        <% end %>
        <li class="side-bar-item <%= 'item-selected' if 'My Course' == 'My Course' %>">
          <%= link_to courses_path, class: "side-bar-item-inner" do %>
            <svg class="icon icon-small">
              <use href="<%= asset_path('icons.svg') %>#course"></use>
            </svg>
            <span class="">My Course</span>
          <% end %>
        </li>
        <% if policy(current_user.team || :team).show? %>
          <li class="side-bar-item <%= 'item-selected' if 'teams' == 'teams' %>">
            <%= link_to team_path(current_user.team), class: "side-bar-item-inner" do %>
              <svg class="icon icon-small">
                <use href="<%= asset_path('icons.svg') %>#teams"></use>
              </svg>
              <span class="">Team</span>
            <% end %>
          </li>
        <% end %>
        <li class="side-bar-item <%= 'item-selected' if 'Support' == 'Support' %>">
          <%= link_to "#", class: "side-bar-item-inner" do %>
            <svg class="icon icon-small fill-current text-white">
              <use href="<%= asset_path('icons.svg') %>#support"></use>
            </svg>
            <span class="">Support</span>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
  <%= button_to destroy_user_session_path, class: "side-bar-footer w-full", method: :delete, data: { turbo_method: :delete } do %>
    <span class="icon icon-logout icon-small"></span>
    <span class="">Logout</span>
  <% end %>
</aside>
