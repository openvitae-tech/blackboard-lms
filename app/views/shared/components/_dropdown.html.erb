<div class="relative inline-block text-left" data-controller="dropdown">
  <button
    class="inline-flex w-full justify-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:ring-offset-gray-100"
    type="button"
    data-action="click->dropdown#toggle"
    >
    Options
    <svg class="-mr-1 ml-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
      <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
    </svg>
  </button>
  <div
    class="hidden absolute right-0 z-10 mt-2 w-56 origin-top-right rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none"
    data-dropdown-target="menu"
  >
    <div class="py-1 px-4">
      <% options.each do |option| %>
        <%= link_to option.name, courses_path(tags: option.name), class: 'block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100' %>
      <% end %>
    </div>
  </div>
</div>
