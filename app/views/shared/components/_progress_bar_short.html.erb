  <div class="flex flex-col items-center gap-1">
    <span class="text-xs font-bold text-primary"><%= progress %>%</span>
    <div class="h-1 grow bg-line-colour-light w-full">
      <div class="h-1 bg-primary" style="width: <%= progress %>%"></div>
    </div>
  </div>
<% end %>