<div class="flex flex-col border-b border-line-colour">
  <%= image_tag course_banner(course, :vertical), class: "h-[120px] min-w-[328px] rounded-t object-cover" %>
  <div class="m-4 flex flex-col">
    <p class="mb-1 overflow-hidden text-ellipsis text-sm font-extrabold italic text-primary">
      <%= @course.title %>
    </p>
    <div class="flex items-center gap-4">
      <div class="h-1 rounded-full bg-primary-light-50 w-[252px]">
        <div class="h-1 rounded-full bg-secondary" style="width: <%= @course.progress %>%"></div>
      </div>
      <span class="text-sm font-semibold text-secondary"><%= @course.progress %>%</span>
    </div>
    <div class="mt-2 flex justify-between space-x-4">
      <div class="flex items-center space-x-2">
        <span class="icon icon-lessons h-3.5 w-3.5"></span>
        <span class="ml-2 text-xs font-medium"><%= modules_count(course) %></span>
      </div>
      <div class="flex items-center space-x-2">
        <span class="icon icon-clock h-3.5 w-3.5"></span>
        <span class="ml-2 text-xs font-medium"><%= course_duration(course) %></span>
      </div>
      <div class="flex items-center space-x-2">
        <span class="icon icon-user h-3.5 w-3.5"></span>
        <span class="ml-2 text-xs font-medium"><%= enroll_count(course) %></span>
      </div>
    </div>
    <p class="my-3 overflow-hidden text-ellipsis text-sm font-medium tracking-tight max-h-[20px]">
      Course Description
    </p>
    <div class="overflow-hidden text-ellipsis p-4 text-justify text-sm tracking-tight text-letter-color-light bg-primary-light-50 max-h-[100px]">
      <%= course_description(course) %>
    </div>
    <div class="flex justify-center gap-4 pt-6">
      <% if policy(course).unenroll? %>
        <%= link_to unenroll_course_path(course), data: { turbo_method: :put, turbo_confirm: t("course.drop_warning") }, class: "border-gary1 flex items-center gap-2 rounded border p-1 px-3" do %>
          <span class="icon icon-minus icon-small"></span>
          <span class="text-xs text-secondary">Drop</span>
        <% end %>
      <% end %>
      <% if policy(course).enroll? %>
        <%= link_to enroll_course_path(course), data: { turbo_method: :put }, class: "bg-primary flex items-center gap-2 rounded p-1 px-3" do %>
          <span class="text-xs text-white">Enroll</span>
        <% end %>
      <% end %>
      <% if policy(course).proceed? %>
        <%= link_to proceed_course_path(course), class: "bg-primary flex items-center gap-2 rounded p-1 px-3" do %>
          <span class="text-xs text-white">Proceed</span>
          <span class="icon icon-next icon-small"></span>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
  