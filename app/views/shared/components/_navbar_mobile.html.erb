<nav class="p-4 flex flex-wrap box-shadow-medium  items-center justify-between w-full gap-4">
  <div class="flex flex-row justify-between items-center w-full">
    <label for="sidebar-toggle" class="flex items-center cursor-pointer">
      <span class="icon icon-menu icon-small bg-letter-color"></span>
    </label>
    <%= image_tag 'instruo_beta_logo_mobile.png', alt: 'Instruo', class: 'h-6 w-16' %>
    <div class="flex gap-5 items-center">
      <%= link_to notifications_path, class:"inline-block hover:pointer" do %>
        <span class="icon icon-small icon-notification bg-letter-color"></span>
      <% end %>
      <%= link_to settings_path, class: "inline-block hover:pointer w-6 h-6" do %>
        <%= render 'shared/components/profile_pic', letter: letter_avatar(current_user) %>
      <% end %>
    </div>
  </div>
  <%- if controller_name == 'courses' %>
    <div class="relative rounded-md shadow-sm w-full">
      <%= form_tag search_courses_path, method: :get do %>
        <div class="pointer-events-none absolute inset-y-0 flex items-center pl-3">
          <span class="icon icon-search icon-small bg-letter-color"></span>
        </div>
        <div class="border rounded-lg border-line-colour-light">
          <%= text_field_tag :term, '', id: 'course-search', class: 'input-search w-full', placeholder: 'Search courses ...' %>
        </div>
      <% end %>
    </div>
  <% end %>
</nav>
