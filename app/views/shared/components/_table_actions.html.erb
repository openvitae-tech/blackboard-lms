<div class="flex flex-col items-end gap-2 text-xs md:items-start md:text-sm">
  <% Array(actions).each do |action| %>
    <%= link_to action[:url], data: action.fetch(:data, {}).merge(turbo_frame: action[:turbo_frame]) do %>
      <%= render "shared/components/#{action[:component]}", label: action[:label], icon_name: action[:icon] %>
    <% end %>
  <% end %>
</div>
