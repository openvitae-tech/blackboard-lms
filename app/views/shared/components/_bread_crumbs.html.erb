<div class="mt-4 md:mb-4">
  <ol class="flex items-start space-x-2 text-secondary text-xs">
    <% links.each do |title, link| %>
      <li class="flex items-center space-x-1">
        <% if link.blank? %>
          <span><%= title %></span>
        <% else %>
          <span class="flex items-center">
            <%= link_to title, link, class: 'hover:pointer hover:underline hover:text-primary whitespace-nowrap' %>
            <span class="icon icon-simple-arrow-right bg-letter-color icon-small ml-1"></span>
          </span>
        <% end %>
      </li>
    <% end %>
  </ol>
</div>
