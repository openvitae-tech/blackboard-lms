<div class="relative mt-1" data-controller="more-action" >
  <label class="flex items-center cursor-pointer hover:rounded-lg hover:bg-line-colour" data-action="click->more-action#toggleDropdown">
    <span class="icon icon-more-vertical bg-letter-color icon-small"></span>
  </label>
  <div class="absolute bg-white rounded box-shadow-medium hidden mt-3 -ml-20 z-10" data-more-action-target="moreMenu" data-user-status-confirmation-target="moreMenu">
    <button
      class="text-xs cursor-pointer px-4 py-2 hover:bg-gray-100 w-full text-left"
      data-action="click->user-status-confirmation#showConfirmation"
      data-user-status-confirmation-target="deactivateMenu"
      data-activate="false">
      Deactivate
    </button>
  </div>
</div>
