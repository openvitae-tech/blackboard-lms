<%= modal_component(title: 'Delete program?') do %>
  <%= form_with(url: program_path(@program), method: :delete, class: "flex flex-col gap-6") do |form| %>
    <div class="p-2">
      <div class="pl-4 pt-2">
        <p class="text-sm text-gray-700">
          <%= t("alert.description", label: @program.name, resource_name: "program").html_safe %>
        </p>
      </div>
    </div>
    <div class="flex justify-end gap-4 border-t border-line-colour-light p-4">
      <%= form.button "Cancel", class: "px-4 py-2 rounded text-sm", data: { action: "click->modals#closeModal" } %>
      <%= form.button "Delete", class: "bg-danger text-white px-4 py-2 rounded text-sm" %>
    </div>
  <% end %>
<% end %>
