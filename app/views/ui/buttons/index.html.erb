    <%= button_component(text: "Button", size: "sm", icon_name: "user-circle") %>
    <%= button_component(text: "Button", icon_name: "user-circle") %>
    <%= button_component(text: "Button", size: "lg", icon_name: "user-circle") %>
  </div>
<% end %>


