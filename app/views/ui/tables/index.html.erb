          data: [
            { span: "col-span-6", alignment: "justify-start", method: ->(row) { table_cell_name(row, avatar: true) } },
            { span: "col-span-6", alignment: "justify-end", method: ->(row) { 
                table_actions(row, [
                  { label: "Edit", icon: "icon-edit", component: "button_default_small" },
                  { label: "Delete", icon: "icon-trash", component: "button_default_small" }
                ]) 
              }
            }
          ],
          row: partner,
          table_type: "tag",
          extra_data: {}
        %>
      <% end %>
    </div>

  </div>
</div>
