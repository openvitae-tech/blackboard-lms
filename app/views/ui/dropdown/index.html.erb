   <%= dropdown_component(
        form: form,
        name: :category_id,
        label: "Category",
        error:"some error",
        options: [["Option 1", 1], ["Option 2", 2], ["Option 3", 3]],
        support_text: "Please select a category"
      ) %>
  <% end %>
<% end %>

<%= form_with url: "#", method: :post do |form| %>
  <%= doc_section_component(title: "Dropdown disabled") do %>
   <%= dropdown_component(
        form: form,
        name: :category_id,
        label: "Category",
        disabled:true,
        options: [["Option 1", 1], ["Option 2", 2], ["Option 3", 3]],
        support_text: "Please select a category"
      ) %>
  <% end %>
<% end %>