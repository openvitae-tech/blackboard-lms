<div class="flex flex-col gap-4">
  <% if label.present? %>
    <label class="text-letter-color-light text-sm font-normal leading-tight">
      <%= label %>
    </label>
  <% end %>
  <div class="h-12 px-4 py-3 bg-white rounded border border-line-colour flex justify-between items-center gap-2.5 <%= width %>">
    <span class="text-letter-color-light text-base font-normal"><%= placeholder %></span>
    <% if form.present? %>
      <%= form.radio_button field_name, value || field_name, class: "form-radio w-5 h-5" %>
    <% else %>
      <input type="radio" name="<%= field_name %>" value="<%= value %>" class="form-radio w-5 h-5" />
    <% end %>
  </div>
</div>
