<div class="flex flex-col gap-4">
  <% if label.present? %>
    <label class="text-letter-color-light text-sm font-normal leading-tight">
      <%= label %>
    </label>
  <% end %>
  <div class="h-12 px-4 py-3 bg-white rounded border border-line-colour flex justify-between items-center gap-2.5 <%= width %>">
    <% if option.present? %>
      <span class="text-letter-color-light text-base font-normal"><%= option %></span>
    <% end %>
    
    <% if form.present? %>
      <%= form.text_field text_field_name, class: 'w-full text-letter-color-light text-base border-none rounded focus:ring-0 focus:outline-none', placeholder: placeholder %>
      <%= form.radio_button radio_field_name, value || field_name, class: "form-radio w-5 h-5" %>
    <% else %>
      <input type="<%= type %>" name="<%= text_field_name %>" placeholder="<%= placeholder %>" class="w-full text-letter-color-light text-base border-none rounded focus:ring-0 focus:outline-none" />
      <input type="radio" name="<%= radio_field_name %>" value="<%= value|| option %>" class="form-radio w-5 h-5" />
    <% end %>
  </div>
</div>
