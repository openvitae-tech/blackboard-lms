<template data-course-editor-target="courseTemplate">
      <div class="p-6">
        <h2 class="text-xl font-semibold mb-4">Create New Course</h2>
        <div class="bg-white border rounded-lg p-6 shadow-sm">
          <div class="mb-4">
            <label class="block text-sm font-medium mb-2">Course Title</label>
            <input 
              type="text" 
              data-course-editor-target="courseTitle"
              class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" 
              placeholder="Enter course title">
          </div>

          <div class="flex gap-2 mb-4 items-center">
            <button 
              data-action="click->course-editor#addModule" 
              class="btn-primary">
              Add Module
            </button>

            <button
              data-course-editor-target="addAssessmentBtn"
              data-action="click->course-editor#addAssessment"
              data-tool="assessment"
              class="btn-primary opacity-50 cursor-not-allowed"
              disabled>
              Add Assessment
            </button>

            <button
              data-course-editor-target="addSummaryBtn"
              data-action="click->course-editor#addSummary"
              data-tool="summary"
              class="btn-primary opacity-50 cursor-not-allowed"
              disabled>
              Add Summary
            </button>
          </div>

          <div data-course-editor-target="moduleContainer" class="space-y-4">
          </div>
          <div data-course-editor-target="assessmentContainer" class="space-y-4 mt-4">
          </div>
          <div data-course-editor-target="summaryContainer" class="space-y-4 mt-4">
          </div>
          <div class="mt-6 pt-4 border-t flex gap-2">
            <button 
              data-action="click->course-editor#saveCourse" 
              class="btn-primary">
              Save Course
            </button>
            
          </div>
        </div>
      </div>
    </template>