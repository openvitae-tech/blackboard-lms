<template data-course-editor-target="quizTemplate">
      <div class="border rounded p-3 bg-blue-50" data-quiz-id="">
        <div class="flex justify-between items-start mb-2">
          <div class="flex-1">
            <label class="block text-xs font-medium mb-1">Quiz Question</label>
                <%= input_dropdown(
                    field_name: "question",
                    label: "Select Quiz Question",
                    options: ['question_1', 'question_2'], 
                    placeholder: "Choose a question",
                    html_options: { required: true, "data-target": "quizQuestion" }, 
                    width: "w-full"
                ) %>

          </div>
          <button 
            data-action="click->course-editor#removeQuiz" 
            class="ml-2 w-5 h-5 text-white bg-danger rounded-full flex items-center justify-center text-xs hover:bg-red-600">
            <%= icon("x-circle", css: "icon-base") %>
          </button>
        </div>
      </div>
    </template>