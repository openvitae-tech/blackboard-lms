<div data-controller="course-editor" class="flex h-screen">
  <!-- Sidebar -->
  <div class="w-1/5 bg-gray-100 p-4 flex flex-col gap-2">
    
    
    <textarea data-course-editor-target="jsonOutput" class="mt-4 p-2 overflow-auto bg-white rounded h-[500px]">
    </textarea>
    <button 
      data-action="click->course-editor#editCourse" 
      class="btn-primary">
      Edit course
    </button>
  </div>

  <div class="flex flex-col w-4/5">
    <div class="p-6" data-course-editor-target="content">
      <h1 class="text-2xl font-bold mb-4">New course</h1>
    </div>


    <%= render "ui/course_creating/templates/course" %>
    <%= render "ui/course_creating/templates/modules" %>
    <%= render "ui/course_creating/templates/lessons" %>
    <%= render "ui/course_creating/templates/quiz" %>
    <%= render "ui/course_creating/templates/assessment" %>
    <%= render "ui/course_creating/templates/summary" %>


    
  </div>
</div>
