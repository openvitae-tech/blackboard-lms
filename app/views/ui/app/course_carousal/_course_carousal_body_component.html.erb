<div class="relative flex w-full" data-course-carousal-component-target="courseCarousalBody" id="<%= dom_key("course-carousal") %>">
  <div aria-disabled="<%= courses.prev_page.blank? %>" class="absolute -left-3 z-50 flex h-full items-center hover:text-primary hover:cursor-pointer" data-action="click->course-carousal-component#loadPrevPage">
    <%= icon("chevron-left", css: "icon-large") %>
  </div>
    <div class="mx-5 flex flex-nowrap overflow-y-auto">
      <% courses.each do |course| %>
        <%= link_to course_path(course) do %>
          <%= course_card_component(course: course) %>
        <% end %>
      <% end %>
    </div>
  <div aria-disabled="<%= courses.next_page.blank? %>" class="absolute -right-3 z-50 flex h-full items-center hover:text-primary hover:cursor-pointer" data-action="click->course-carousal-component#loadNextPage">
    <%= icon("chevron-right", css: "icon-large") %>
  </div>
</div>
