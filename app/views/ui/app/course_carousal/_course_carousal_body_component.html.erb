<div class="flex" data-course-carousal-component-target="courseCarousalBody" id="<%= dom_key("course-carousal") %>">
  <div aria-disabled="<%= courses.prev_page.blank? %>" class="flex-none flex items-center hover:text-primary hover:cursor-pointer" data-action="click->course-carousal-component#loadPrevPage">
    <%= icon("chevron-left", css: "icon-large") %>
  </div>
  <div class="grow flex flex-nowrap overflow-y-auto">
    <% courses.each do |course| %>
      <%= link_to course_path(course) do %>
        <%= course_card_component(course: course) %>
      <% end %>
    <% end %>
  </div>
  <div aria-disabled="<%= courses.next_page.blank? %>" class="flex-none flex items-center hover:text-primary hover:cursor-pointer" data-action="click->course-carousal-component#loadNextPage">
    <%= icon("chevron-right", css: "icon-large") %>
  </div>
</div>
