<% if collection.next_page %>
  <%= link_to query_url(path, {page: collection.next_page}), data: { turbo_stream: true } do %>
    <%= button(label: 'Next', type: "secondary", size: "md") %>
  <% end %>
<% else %>
  <%= button(label: 'Next', type: "secondary", size: "md", disabled: true) %>
<% end %>
