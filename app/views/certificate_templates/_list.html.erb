<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
  <% certificate_templates.each do |template| %>
    <div class="relative bg-white rounded-lg shadow flex flex-col min-h-48 max-w-xs mx-auto w-full mt-4">
      <% if template.active? %>
        <div class="absolute top-2 left-2 bg-theme-highlight text-white text-xs px-2 py-1 rounded">
          Active
        </div>
      <% end %>
      <div class="absolute top-1 right-2">
        <%= render "more_action", learning_partner: learning_partner, template:, certificate_templates: certificate_templates %>
      </div>
      <div class="scale-75 origin-top-left flex-1 flex items-center justify-center">
        <%= template.html_content.html_safe %>
      </div>
      <div class="border-t">
        <h2 class="body-extra-small-medium p-2 flex justify-center"><%= template.name %></h2>
      </div>
    </div>
  <% end %>
</div>
