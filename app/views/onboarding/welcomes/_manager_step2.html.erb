<div class="flex flex-col bg-white w-full md:w-[456px] h-[740px] md:h-[656px] py-6 relative">
  <div class="flex flex-col gap-4 px-8 pb-5 border-b border-line-colour-light mt-14 md:mt-2">
    <h2 class="heading page-heading-medium">Hello, <%= current_user.display_name %></h2>
    <p class="heading text-sm">Your journey to shaping hospitality excellence starts here.</p>
  </div>
  <div class="flex flex-col items-center pt-3">
    <h2 class="text-lg font-semibold pb-4">Assign Courses</h2>   
    <div class="flex justify-center px-8 pb-4">
      <%= image_tag "welcome_assing_course_illustration.gif", class:"w-[328px] h-[328px]", alt: "Course Step" %>
    </div>
    <p class="text-sm text-center px-14 pb-4">
      Assign personalized courses to promote targeted skill growth
    </p>   
    <div class="flex flex-col absolute bottom-6 items-center">
      <%= render "onboarding/welcomes/skip_intro" %>

      <div class="flex space-x-2 mt-4">
        <div class="w-2 h-2 bg-line-colour-light rounded-full"></div>
        <div class="w-2 h-2 bg-primary rounded-full"></div>
        <div class="w-2 h-2 bg-line-colour-light rounded-full"></div>
        <div class="w-2 h-2 bg-line-colour-light rounded-full"></div>
      </div>    
    </div>       
  </div>
  <div 
    class="absolute inset-y-0 left-0 w-1/4 cursor-pointer" 
    data-action="click->onboarding#previousScreen"
    data-current="step2Screen" 
    data-previous="step1Screen">
  </div>
  <div 
    class="absolute inset-y-0 right-0 w-1/4 cursor-pointer" 
    data-action="click->onboarding#nextScreen"
    data-current="step2Screen"
    data-next="step3Screen">
  </div>
</div>

