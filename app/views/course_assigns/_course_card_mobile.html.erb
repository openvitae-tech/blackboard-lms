<li class="flex flex-col box-shadow-medium mt-6 p-4" data-controller="assigns">
  <div class="flex justify-between">
    <%= image_tag course_banner_thumbnail_vertical(course), class: "h-[118px] w-[152px] rounded-l object-cover" %>
    <div class="flex flex-col items-end">
      <%= f.check_box :course_ids, { multiple: true, class: "w-6 h-6 border-2 rounded border-secondary checked:bg-secondary checked:border-secondary checked:focus:bg-secondary focus:ring-0", data: { action: "assigns#toggle" } }, course.id, false %>
      <div class="flex flex-col items-center gap-2 hidden" data-assigns-target="durationContainer">
        <div class="font-medium flex items-center py-1" data-assigns-target="labelContainer">
          <label for="duration">Assign Duration:</label>
        </div>
        <div class="hidden flex items-center font-medium" data-assigns-target="customLabelContainer">
          <label class="">Custom:</label>
          <input type="date" id="custom-date" class="border-0 focus:ring-0" data-action="change->assigns#datePicked">
        </div>
        <%= f.select "duration[]", options_for_duration, {}, disabled: true, id: 'duration', class: "border border-line-colour-light box-shadow-small rounded focus:ring-0", data: { assigns_target: "dateSelector", action: "change->assigns#durationChanged", duration: 'duration' } %>
      </div>
    </div>
  </div>
  <div class="flex flex-col mt-4">
    <p class="text-primary  overflow-hidden text-ellipsis text-sm font-extrabold italic mb-1">
      <%= course.title %>
    </p>
    <div class="flex justify-between space-x-4 mt-2">
      <div class="flex items-center space-x-2">
        <span class="icon icon-lessons h-2 w-3"></span>
        <span class="ml-2 text-xs font-medium"><%= modules_count(course) %></span>
      </div>
      <div class="flex items-center space-x-2">
        <span class="icon icon-clock h-2 w-3"></span>
        <span class="ml-2 text-xs font-medium"><%= course_duration(course) %></span>
      </div>
      <div class="flex items-center space-x-2">
        <span class="icon icon-user h-2 w-3"></span>
        <span class="ml-2 text-xs font-medium"><%= enroll_count(course) %></span>
      </div>
    </div>
    <p class="my-3 max-h-[20px] overflow-hidden text-ellipsis text-sm font-medium tracking-tight">
      Course Description
    </p>
    <div class="text-letter-color-light max-h-[100px] overflow-hidden text-ellipsis text-justify text-sm tracking-tight">
      <%= course_description(course) %>
    </div>
  </div>
</li>