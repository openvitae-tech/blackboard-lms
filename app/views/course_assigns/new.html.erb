<%= render "shared/components/layout" do %>
  <%= render 'shared/components/back_button', back_link: team_path(current_user.team) %>
  <div class="flex flex-col md:flex-row  gap-4 justify-between items-start my-6">
    <h1 class="pl-0 text-xl font-bold">Assign course</h1>
    <div class="flex items-center gap-4">
      <div class="relative rounded-md shadow-sm">
        <div class="pointer-events-none absolute inset-y-0 flex items-center pl-3">
          <span class="icon icon-search icon-small bg-letter-color"></span>
        </div>
        <input type="text" value="Search courses" name="price" id="price" class="input-search" placeholder="Search courses" />
      </div>
      <div class="box-shadow-medium flex items-center gap-2 rounded px-3 py-2">
        <span class="icon icon-filter bg-secondary icon-small"></span>
        <span class="text-secondary text-sm">Filter</span>
      </div>
    </div>
  </div>

  <% if @courses.empty? %>
    <div class="text-notice">No courses to assign</div>
  <% else %>
    <%= form_with url: course_assigns_path, method: :post do |form| %>
      <% if @team_assign %>
        <%= form.hidden_field :team_id, value: @team.id %>
      <% else %>
        <%= form.hidden_field :user_id, value: @user.id %>
      <% end %>
      <ul class="overflow-y-auto p-1 flex flex-col gap-4 h-[700px]">
        <% @courses.each do |course| %>
          <%= render 'course_assigns/course_card', course: course, f: form %>
        <% end %>
      </ul>
      <div id="footer" class="flex flex-col md:flex-row gap-4 py-6 text-sm justify-end sticky bottom-0 -mb-8 right-8 w-full bg-white items-center">
        <%= form.button 'Assign Course', class: 'bg-primary text-white px-4 py-2 rounded w-full md:w-auto md:order-2' %>
        <%= link_to 'Cancel', request.referer, class: 'w-full md:w-auto text-center md:text-left md:order-1' %>
      </div>
    <% end %>
  <% end %>
<% end %>
