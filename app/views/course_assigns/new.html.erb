<%= render "shared/components/layout" do %>
  <%= render 'shared/components/back_button', back_link: @back_link %>
  <div data-controller="courses">
    <%= render 'courses/filters', tags: @tags %>
    <div class="flex flex-col md:flex-row  gap-4 justify-between items-start my-6">
      <h1 class="heading page-heading-medium pl-0">Assign course</h1>
      <div class="flex items-center gap-4">
        <%= form_tag courses_path, method: :get, data: { action: "submit->courses#formSubmit" } do %>
          <div class="relative rounded-md border border-line-colour-light w-full">
            <div class="pointer-events-none absolute inset-y-0 left-3 flex items-center">
              <span class="icon icon-search icon-small bg-letter-color"></span>
            </div>
            <%= text_field_tag :term,
                               params[:term],
                               id: 'course-search',
                               class: 'input-search w-full border-none pr-10',
                               placeholder: 'Search courses ...',
                               data: {
                                 courses_target: 'searchInput',
                               }
            %>
            <% if params[:term].present? %>
              <div class="absolute inset-y-0 right-4 flex items-center cursor-pointer" data-action="click->courses#clearSearch">
                <span class="flex cursor-pointer items-center text-purple text-sm">Clear search</span>
              </div>
            <% end %>
          </div>
        <% end %>
        <div data-action="click->courses#openFilter">
          <%= render 'shared/components/button_default_small', label: 'Filter', icon_name: 'icon-filter' %>
        </div>
      </div>
    </div>
  </div>

  <% if @courses.empty? %>
    <div class="text-notice">No courses to assign</div>
  <% else %>
    <%= form_with url: course_assigns_path, method: :post do |form| %>
      <% if @team_assign %>
        <%= form.hidden_field :team_id, value: @team.id %>
      <% else %>
        <%= form.hidden_field :user_id, value: @user.id %>
      <% end %>
      <ul class="overflow-y-auto p-1 flex flex-col gap-4 h-[700px]">
        <% @courses.each do |course| %>
          <li id="<%= dom_id(course, "unassigned") %>" class="w-full">
            <%= render 'course_assigns/course_card', course: course, f: form %>
          </li>
        <% end %>
      </ul>
      <div id="footer" class="flex flex-col md:flex-row gap-4 py-6 text-sm justify-end sticky bottom-0 -mb-8 right-8 w-full bg-white items-center">
        <%= form.button 'Assign Course', class: 'bg-primary text-white px-4 py-2 rounded w-full md:w-auto md:order-2' %>
        <%= link_to 'Cancel', @back_link, class: 'w-full md:w-auto text-center md:text-left md:order-1' %>
      </div>
    <% end %>
  <% end %>
<% end %>
