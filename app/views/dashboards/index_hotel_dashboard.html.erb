<%= render "shared/components/desktop_layout" do %>
<main class="">
   <div class="flex pb-2 justify-between">
      <div class="flex items-center gap-4  w-[350px]">
         <img class="h-8" src="assets/taj.png" alt="Profile Picture">
         <span class="font-medium text-basic pt-2">Taj Hotels & Resorts</span>
      </div>
   </div>
   <div class="">
      <ol class="flex items-center space-x-2 text-secondary text-xs">
         <li class="flex space-x-1">
            <a href="#" class="">Tata group dashboard</a>
            <span class="icon icon-simple-arrow-right h-4 w-4"></span>
         </li>
         <li class="flex space-x-1">
            <a href="#" class="">Add a Team</a>
            <span class="icon icon-simple-arrow-right h-4 w-4"></span>
         </li>
         <li class="flex space-x-1">
            <a href="#" class="">Tag Hotels & Resorts  </a>
            <span class="icon icon-simple-arrow-right h-4 w-4"></span>
         </li>
      </ol>
   </div>
   <div class="mb-6 mt-8 flex flex-row gap-6">
      <%= render "shared/components/course_watch_time_chart" %>
      <%= render "shared/components/enrolled_ratio_chart" %>                             
   </div>
   <div class="flex justify-end mb-5"><button class="mt-2 flex justify-center">
      <a href="#" class="text-primary flag-box-shadow flex items-center gap-1 rounded p-2 text-sm">
      View all analytics
      <span class="icon icon-arrow-right h-4 w-4"></span>
      </a>
      </button>
   </div>
   <div class="flex justify-between">
      <div class="relative rounded-md shadow-sm">
         <div class="pointer-events-none absolute inset-y-0 flex items-center pl-3">
            <span class="icon icon-search h-4 w-4"></span>
         </div>
         <input
            type="text"
            value="Search Team Members"
            name="price"
            id="price"
            class="input-search"
            placeholder="Search courses"
            />
      </div>
      <div class="flex justify-center gap-6">
         <button id="" class="bg-secondary flex items-center gap-2 rounded px-4 py-2">
         <span class="icon icon-assign-user-white h-4 w-4 items-center"></span>
         <span class="text-xs text-white">Assign course</span>
         </button>
         <button id="" class="bg-primary flex items-center gap-2 rounded px-4 py-2">
         <span class="icon icon-plus-white h-4 w-4 items-center"></span>
         <span class="text-xs text-white">Add User</span>
         </button>
      </div>
   </div>
   <%= render "shared/components/team_list" %> 
   <div class="flex items-center justify-between pt-8">
      <p class="text-basic font-medium">Linked Hotels & Resorts</p>
      <button
         id=""
         class="bg-primary flex items-center gap-2 rounded px-4 py-2" >
      <span class="icon icon-plus-white h-4 w-4 items-center"></span>
      <span class="text-xs text-white">Add Team</span>
      </button>
   </div>
   <%= render "shared/components/team_hotel_list" %>
</main>
<% end %>