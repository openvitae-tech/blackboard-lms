<div data-controller="pagination">
  <%= link_to_unless current_page.last?,
      t('views.pagination.next').html_safe,
      url,
      remote: remote,
      data: {
        turbo_stream: true,
        pagination_target: "button",
        action: "pagination#setPageParam"
      },
      class: "bg-white font-light py-2 px-4 border border-gray-400 rounded shadow"
  %>
</div>
