<% if APP_CONFIG.chatwoot_enabled? %>
  <script>
    (function(d,t) {
      var BASE_URL="https://app.chatwoot.com";
      var g=d.createElement(t),s=d.getElementsByTagName(t)[0];
      g.src=BASE_URL+"/packs/js/sdk.js";
      g.async = true;
      s.parentNode.insertBefore(g,s);
      g.onload=function(){
        window.chatwootSDK.run({
          websiteToken: "<%= Rails.application.credentials.dig(:chatwoot, :widget_token) %>",
          baseUrl: BASE_URL
        })
      }
    })(document,"script");
  </script>
<% end %>
