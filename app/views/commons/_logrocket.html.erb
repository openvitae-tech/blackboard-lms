<script src="https://cdn.lgrckt-in.com/LogRocket.min.js" crossorigin="anonymous"></script>
<script>window.LogRocket && window.LogRocket.init("<%= Rails.application.credentials.dig(:logrocket, :token) %>");
  <% if current_user %>
    window.LogRocket.identify("<%= current_user.id %>", {
      name: "<%= j current_user.name %>",
      email: "<%= DEFAULT_ENCRYPTOR.encrypt_and_sign(current_user.email) %>",
      phone: "<%= DEFAULT_ENCRYPTOR.encrypt_and_sign(current_user.phone) %>",
      role: "<%= j current_user.role %>"
    });
  <% end %>
</script>
