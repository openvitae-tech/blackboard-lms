<%= modal_box_component(title: @title ) do %>
  <div class="p-2">
    <div class="p-4 pt-2">
      <p class="text-sm">
        <%= @description.html_safe %>
      </p>
    </div>
  </div> 
  <div class="flex gap-4 border-t border-line-colour-light p-4">
    <%= button_component(type: 'outline', text: "Cancel", html_options: { data: { action: "click->modals#closeModal" } }) %>
    <%= link_to @action_path, data: { turbo_method: @method, turbo_frame: "_top" }, class: "text-white px-4 py-2 rounded text-sm #{ @method == "delete" ? 'bg-danger' : 'bg-primary' }" do %>
      <%= @method == "delete" ? t("button.delete") : t("button.ok") %>
    <% end %>
  </div>
<% end %>