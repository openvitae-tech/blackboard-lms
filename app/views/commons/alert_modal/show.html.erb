<%= modal_box_component title: @title do %>
  <div class="flex flex-col gap-7">
      <p class="main-text-md-medium">
        <%= @description.html_safe %>
      </p>
    <div class="flex gap-2 w-full">
      <%= link_to "#", class: "w-full" do %>
        <%= button_component text: t("button.cancel"), type: "outline", colorscheme: "primary" %>
      <% end %>
      <%= link_to @action_path, data: { turbo_method: @method, turbo_frame: "_top" }, class: "w-full" do %>
        <%= button_component text: @method == "delete" ? t("button.delete") : t("button.ok"), colorscheme: @method == "delete" ? 'danger' : 'primary' %>
      <% end %>
    </div>
  </div>
<% end %>
