<%= render "shared/components/desktop_layout" do %>
  <h1 class="my-4 text-xl font-semibold">User settings</h1>
  <div class="rounded box-shadow-medium">
    <%= render "settings/page_header_desktop", user: @user %>
    <%= render "settings/page_body_desktop", user: @user %>

    <div class="p-8">
      <h1 class="text-base font-semibold">Change password</h1>
      <div class="mt-4">
        <%= link_to 'Change your password', change_password_settings_path, data: { turbo_frame: 'change-password-modal' }, class: 'link-text' %>
      </div>
    </div>
  </div>
<% end %>