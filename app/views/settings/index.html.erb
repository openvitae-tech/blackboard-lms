<%= render "shared/components/layout" do %>
  <h1 class="text-xl font-semibold my-6"><%= t("settings.label") %></h1>
  <% settings_list.each do |setting| %>
    <%= link_to setting[:path] do %>
      <div class="p-6 w-1/3 bg-white border border-line-colour rounded-lg shadow-md my-6">
        <div class="flex items-start space-x-5">
          <span class="icon <%= setting[:icon] %> bg-secondary icon-base"></span>
          <h3 class="text-lg font-semibold text-gray-900"><%= setting[:label] %></h3>
        </div>
        <p class="text-sm text-gray-600 mt-2"><%= setting[:description] %></p>
      </div>
    <% end %>
  <% end %>
<% end %>
