<% if current_user.is_admin? %>
  <div class="flex gap-8 p-6 md:p-8 rounded box-shadow-medium mt-6">
      <%= render 'shared/components/profile_pic', letter: letter_avatar(user) %>
    <div class="flex items-center gap-4">
      <span class="text-sm md:text-base font-semibold"><%= user.name %></span>
    </div>
  </div>
<% else %>
  <h2 class="mt-4 mb-6 text-base text-primary font-medium pl-4 md:pl-6"><%= user.name %></h2>
<% end %>
