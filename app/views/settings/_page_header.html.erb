<div id="settings-page-header-desktop" class="flex gap-8 border-b p-8 border-line-colour">
  <div class="flex items-center">
    <%= link_to "javascript:void(0);", class: "inline-block w-14 h-14" do %>
      <%= render "shared/components/profile_pic", letter: letter_avatar(user) %>
    <% end %>
  </div>
  <div class="flex flex-col gap-3 sm:gap-6">
    <div class="flex items-center gap-4">
      <span class="text-sm sm:text-base font-semibold"><%= user.name %></span>
    </div>
    <div class="flex sm:flex-row flex-col gap-4">
      <div class="flex items-start">
        <span class="flex-shrink-0 text-xs sm:text-sm font-normal text-letter-color-light">Organization:</span>
        <span class="text-xs sm:text-sm font-normal text-letter-color-light ml-2 break-words">
          <%= org_name(user.learning_partner) %>
        </span>
      </div>     
      <div class="text-xs sm:text-sm font-normal text-letter-color-light">
        Role: <%= role_text(user.role) %>
      </div>
    </div>
  </div>
</div>