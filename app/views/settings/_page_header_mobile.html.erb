<div id="settings-page-header-mobile" class="my-6 rounded box-shadow-medium">
  <div class="flex gap-4 p-4">
    <div class="w-10">
      <%= link_to "javascript:void(0);", class: "inline-block" do %>
        <%= render "shared/components/profile_pic", letter: letter_avatar(user) %>
      <% end %>
    </div>
    <div class="flex flex-col gap-3">
      <div class="flex items-center gap-4">
        <span class="text-base font-semibold"><%= user.name %></span>
        <%= image_tag team_banner(user), class: "h-3 w-14 object-cover" %>
      </div>
      <div class="flex gap-4">
        <span class="text-sm font-normal text-letter-color-light">Organization: <%= org_name(user.learning_partner) %></span>
      </div>
      <div class="flex gap-4">
        <span class="text-sm font-normal text-letter-color-light">Role: <%= role_text(user.role) %></span>
      </div>
    </div>
  </div>
</div>