<%= render "shared/components/mobile_layout" do %>
  <h1 class="my-4 text-sm font-medium">User settings</h1>
  <div class="my-6 rounded box-shadow-medium">
    <div class="flex gap-4 p-4">
      <div class="w-10">
        <%= link_to "javascript:void(0);", class: "inline-block" do %>
          <%= render "shared/components/profile_pic", letter: letter_avatar(current_user) %>
        <% end %>
      </div>
      <div class="flex flex-col gap-3">
        <div class="flex items-center gap-4">
          <span class="text-base font-semibold"><%= current_user.name %></span>
          <% if current_user.team&.banner.present? %>
            <%= image_tag current_user.team.banner, class: "h-3 w-14 object-cover" %>
          <% end %>
        </div>
        <div class="flex gap-4">
          <span class="text-sm font-normal text-letter-color-light">Organization: <%= org_name(current_user.learning_partner) %></span>
        </div>
        <div class="flex gap-4">
          <span class="text-sm font-normal text-letter-color-light">Role: <%= role_text(current_user.role) %></span>
        </div>
      </div>
    </div>
  </div>
  <div class="rounded box-shadow-medium">
    <div class="flex gap-8 border-b p-8 border-line-colour">
      <div class="flex w-full flex-col gap-8">
        <div class="flex justify-between">
          <h1 class="text-base font-semibold">Personal information</h1>
          <%= link_to edit_settings_path, data: { turbo_frame: "edit-settings-modal" }, class: "box-shadow-medium flex items-center justify-between gap-1 rounded-sm py-1 px-2" do %>
            <span class="text-xs font-medium text-secondary">Edit</span>
            <span class="icon icon-edit h-[10px] w-[10px]"></span>
          <% end %>
        </div>
        <div>
          <div class="text-sm font-normal text-letter-color-light">Email</div>
          <div class="mt-2 text-base font-medium"><%= current_user.email %></div>
        </div>
        <div>
          <div class="text-sm font-normal text-letter-color-light">Phone</div>
          <div class="mt-2 text-base font-medium"><%= current_user.phone %></div>
        </div>
      </div>
    </div>
    <div class="p-8">
      <h1 class="text-base font-semibold">Change password</h1>
      <div class="mt-4">
        <%= link_to 'Change your password', change_password_settings_path, data: { turbo_frame: 'change-password-modal' }, class: 'link-text' %>
      </div>
    </div>
  </div>
<% end %>