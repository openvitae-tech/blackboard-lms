<div id="settings-page-header-desktop" class="flex gap-8 border-b p-8 border-line-colour">
  <div>
    <%= link_to "javascript:void(0);", class: "inline-block w-14 h-14" do %>
      <%= render "shared/components/profile_pic", letter: letter_avatar(user) %>
    <% end %>
  </div>
  <div>
    <div class="flex items-center gap-4"><span class="text-base font-semibold"><%= user.name %></span>
      <%= image_tag team_banner(user), class: "h-3 w-20 object-cover" %>
    </div>
    <div class="flex gap-4">
      <span class="text-sm font-normal text-letter-color-light">Organization: <%= org_name(user.learning_partner) %></span><span class="text-sm font-normal text-letter-color-light">Role: <%= role_text(user.role) %></span>
    </div>
  </div>
</div>