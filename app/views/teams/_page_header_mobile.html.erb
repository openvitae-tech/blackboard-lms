<div id="team-page-header-mobile" class="mb-6">
  <div class="inline-flex gap-2 pb-2">
    <span class="icon icon-team-green icon-small"></span>
    <span class="text-sm font-semibold text-primary">Team</span>
  </div>
  <div class="flex flex-col py-4 ">
    <div class="bg-line-colour-light rounded-lg">
      <% if team.banner.present? %>
        <%= image_tag team.banner, class: 'h-[194px] w-full object-cover rounded-lg' %>
      <% else %>
        <%= image_tag 'banner_place_holder_mobile.png', class: 'h-[194px] w-full object-cover rounded-lg' %>
      <% end %>
    </div>

    <div class="flex justify-start -mt-10 ml-4">
      <% if "logo"=="logo" %>
        <%= image_tag 'logo_place_holder.png', class: 'h-20 w-20 object-cover rounded-full border border-line-colour-light box-shadow-medium' %>
      <% else %>
        <%= image_tag 'logo_place_holder.png', class: 'h-20 w-20 object-cover rounded-full border border-line-colour-light box-shadow-medium' %>
      <% end %>
    </div>
  </div>
  <span class="font-medium text-basic pt-2"><%= team.name %></span>
  <div class="mt-4 flex justify-between">
    <ol class="flex flex-wrap items-center gap-1 text-secondary text-[10px]">
      <% team_list(current_user.team, team).each do |team| %>
        <li class="flex items-center gap-[2px]">
          <%= link_to team.name, team_path(team) %>
          <span class="icon icon-simple-arrow-right icon-tiny"></span>
        </li>
      <% end %>
    </ol>
    <div class="flex gap-4">
      <% if policy(team).edit? %>
        <%= link_to edit_team_path(team), data: { turbo_frame: "edit-team-modal" } do %>
          <%= render 'shared/components/button_default_small', label: 'Edit', icon_name: 'icon-edit' %>
        <% end %>
      <% end %>
      <% if policy(:dashboard).index? %>
        <%= link_to dashboard_path do %>
          <%= render 'shared/components/button_default_small', label: 'Team dashboard', icon_name: 'icon-arrow-right' %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
