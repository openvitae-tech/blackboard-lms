<% if team.sub_teams.empty? %>
  <div
    class="mt-6 flex flex-col md:flex-row justify-between gap-4 md:gap-60 rounded border border-dashed p-8 border-primary box-shadow-medium"
  >
    <p class="text-sm md:w-[446px]">
      Welcome, you can manage departments/teams under your team by adding teams for each department/team here.
    </p>
    <% if policy(team).new? %>
      <%= link_to new_team_path(parent_team_id: team.id), data: { turbo_frame: "add-new-team-modal" } do %>
        <%= render 'shared/components/outline_icon_button_primary', label: 'Add team', icon_name: 'icon-plus' %>
      <% end %>
    <% end %>
  </div>
<% else %>
  <div class="flex items-center justify-between pt-8">
    <p class="font-medium text-basic">Your sub teams</p>
    <% if policy(team).new? %>
      <%= link_to new_team_path(parent_team_id: team.id), data: { turbo_frame: "add-new-team-modal" } do %>
        <%= render 'shared/components/icon_button_primary', label: 'Add sub team', icon_name: 'icon-plus' %>
      <% end %>
    <% end %>
  </div>
<% end %>

<ul id="team-list-desktop" class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-6 overflow-y-auto max-h-[400px]">
  <% sub_teams.each do |sub_team| %>
    <%= render 'teams/team_card', team: sub_team %>
  <% end %>
</ul>
