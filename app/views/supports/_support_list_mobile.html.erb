<li class="flex flex-col gap-2" data-controller="show-less">
  <div class="flex justify-between items-center">
    <span class="h-6 w-6 icon <%= icon_name %>"></span>
    <button
      class="flex items-center justify-center"
      data-show-less-target="showMoreToggle"
      data-action="click->show-less#showMoreToggle"
    >
      <span class="text-xs text-primary">Show more</span>
      <span class="hidden icon-arrow-up icon-small" data-show-less-target="upArrow"></span>
      <span class="icon icon-arrow-down icon-small" data-show-less-target="downArrow"></span>
    </button>
  </div>
  <span class="text-base font-semibold text-primary"><%= title %></span>
  <p class="text-sm max-h-10 overflow-hidden" data-show-less-target="courseDescription"><%= description %></p>
</li>
