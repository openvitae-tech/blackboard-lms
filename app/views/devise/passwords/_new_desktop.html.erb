<%= desktop_view do %>
  <div class="h-full columns-2 size-full">
    <%= render "devise/shared/left_side_desktop" %>
    <div class="flex h-full items-center justify-center right-side">
      <div class="bg-white w-[528px]">
        <%= image_tag "login_page_logo_grey.png",  alt: "Superskill", class: "mx-auto mb-12 h-10" %>
        <div class="rounded-lg px-8 pt-8 pb-24 box-shadow-large">
          <h1 class="my-8 text-3xl page-heading">Forgot password?</h1>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="flex flex-col gap-14">
              <div class="input-group">
                <label for="" class="label-text">No worries. We&apos;ll send you reset instructions.</label>
              </div>

              <div class="input-group">
                <%= f.label :email, class: "label-text" %>
                <p class="mt-4">
                  <%= f.email_field :email, class: "input-text", autofocus: true, autocomplete: "email" %>
                </p>
              </div>

              <div class="my-4 actions">
                <%= f.button class: "btn-primary w-full" do %>
                  <span>Reset password</span>
                <% end %>
              </div>
            </div>
          <% end %>

          <div class="mt-6">
            <%= link_to "Login with OTP", new_login_path, class: "link-text" %><br/>
            <%= link_to "Login with email and password", new_session_path(resource_name), class: "link-text" %><br/>
          </div>
        </div>
        <hr class="mt-1 border-y-2 border-primary"/>
      </div>
    </div>
  </div>
<% end %>