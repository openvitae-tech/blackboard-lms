<%= desktop_view do %>
  <div class="h-full columns-2 size-full">
    <%= render "devise/shared/left_side_desktop" %>
    <div class="flex h-full items-center justify-center right-side">
      <div class="bg-white w-[528px] mr-4 my-10">
        <%= image_tag "instruo_logo_blue.png", alt: "Instruo", class: "mx-auto mb-6 h-10 block" %>
        <div class="rounded-lg px-8 pt-8 pb-24 box-shadow-large">
          <h1 class="pb-8 text-3xl heading page-heading">Forgot password?</h1>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <div class="flex flex-col gap-12">
              <%= content_tag :div, class: "input-group" do %>
                <label for="" class="label-text">No worries. We&apos;ll send you reset instructions.</label>
              <% end unless resource.errors.any? %>
              <div class="input-group">
                <%= input_field(form:f, field_name: :email, label: "Email", placeholder: "Enter your email", type: "email", width:"w-full", html_options: { autofocus: true, autocomplete: "email", required: true}) %>
                <p class="text-danger general-text-md-normal py-1"><%= reset_password_error_msg(resource.errors) %><p>
              </div>
              <div class="actions">
                <%= f.button class: "btn-primary w-full" do %>
                  <span>Reset password</span>
                <% end %>
              </div>
            </div>
          <% end %>
          <div class="mt-6">
            <% if feature_enabled?(FLAG_LOGIN_WITH_OTP) %>
              <%= link_text_component "Login with OTP", new_login_path %><br/>
            <% end %>
            <%= link_text_component "Login with email and password", new_session_path(resource_name) %><br/>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>