<%= mobile_view do %>
  <%= render "devise/shared/top_mobile" %>
  <div class="px-4 py-6">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="mb-6">
        <h1 class="heading page-heading">Forgot password?</h1>
      </div>

      <div class="text-sm text-gray-700">
        <%= render "devise/shared/error_messages", resource: resource %>
      </div>

      <div class="flex flex-col gap-8">
        <div class="input-group">
          <label for="" class="label-text">No worries. We&apos;ll send you confirmation instructions.</label>
        </div>

        <div class="input-group">
          <%= input_field(form:f, field_name: :email, label: "Email", placeholder: "Enter your email",type: "email",width:"w-full") %>
        </div>

        <div class="mt-4">
          <%= f.button class: "btn-primary w-full" do %>
            <span>Reset password</span>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="mt-6">
      <% if feature_enabled?(FLAG_LOGIN_WITH_OTP) %>
        <%= link_to "Login with OTP", new_login_path, class: "link-text" %><br/>
      <% end %>
      <%= link_to "Login with email and password", new_user_session_path, class: "link-text" %><br/>
      <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path('user'), class: "link-text" %>
    </div>
  </div>
<% end %>