<%= mobile_view do %>
  <%= render "devise/shared/top_mobile" %>

  <div class="px-4 py-6">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-6">
        <h1 class="heading page-heading">Login</h1>
      </div>

      <div class="flex flex-col gap-6">
        <div class="input-group">
          <%= input_field(form:f, field_name: :email, label: "Email", placeholder: "Enter your email",type: "email",width:"w-full") %>
        </div>
        <div class="input-group">
          <%= input_field(form:f, field_name: :password, label: "Password", placeholder: "Enter password", type: "password",width:"w-full") %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex gap-2 input-group">
            <%= input_checkbox(form: f, field_name: :remember_me, label: "Remember me") %>
          </div>
        <% end %>

        <div>
          <%= f.button class: "w-full btn-primary" do %>
            <span>Login</span>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="mt-6">
      <% if feature_enabled?(FLAG_LOGIN_WITH_OTP) %>
        <%= link_text_component "Login with OTP", new_login_path %><br/>
      <% end %>
      <%= link_text_component "Forgot your password?", new_password_path('user') %><br/>
    </div>
  </div>
<% end %>