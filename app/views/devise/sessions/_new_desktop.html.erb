<%= desktop_view do %>
  <div class="h-full columns-2 size-full">
    <%= render "devise/shared/left_side_desktop" %>
    <div class="flex h-full items-center justify-center right-side">
      <div class="bg-white w-[528px]">
        <%= image_tag "instruo_logo_blue.png", alt: "Instruo", class: "mx-auto mb-12 h-10" %>
        <div class="rounded-lg p-8 box-shadow-large">
          <h1 class="mt-8 mb-2 heading page-heading">Login</h1>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="flex flex-col gap-6">
              <%= render "devise/shared/error_messages", resource: resource %>
              <div class="input-group pt-2">
                <%= input_field(form:f, field_name: :email, label: "Email", placeholder: "Enter your email",type: "email",width:"w-full") %>
              </div>
              <div class="input-group pt-2">
                <%= input_field(form:f, field_name: :password, label: "Password", placeholder: "Enter password", type: "password",width:"w-full") %>
              </div>
              <% if devise_mapping.rememberable? %>
                <div class="flex gap-2 input-group">
                  <%= input_field(form: f, field_name: :remember_me, label: "Remember me", type: "checkbox_field") %>
                </div>
              <% end %>
              <div>
                <%= f.button class: "w-full btn-primary" do %>
                  <span>Login</span>
                <% end %>
              </div>
            </div>
          <% end %>
          <div class="mt-6">
            <p>
              <% if feature_enabled?(FLAG_LOGIN_WITH_OTP) %>
                <%= link_to "Login with OTP", new_login_path, class: "link-text" %><br/>
              <% end %>
              <%= link_to "Forgot your password?", new_password_path(resource_name), class: "link-text" %><br/>
            </p>
          </div>
        </div>
        <hr class="mt-1 border-y-2 border-primary"/>
      </div>
    </div>
  </div>
<% end %>