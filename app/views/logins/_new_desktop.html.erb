<%= desktop_view do %>
  <div class="h-full columns-2 size-full">
    <%= render "devise/shared/left_side_desktop" %>
    <div class="flex h-full items-center justify-center right-side">
      <div class="bg-white w-[528px]">
        <%= image_tag "instruo_logo_blue.png", alt: "Instruo", class: "mx-auto mb-12 h-10" %>
        <div class="rounded-lg px-8 pt-8 pb-24 box-shadow-large">
          <h1 class="my-8 heading page-heading ">Login</h1>
          <%= form_with url: otp_login_path, method: :post, scope: :login, data: { turbo: false } do |form| %>
            <div class="flex flex-col gap-14">
              <div class="input-group">
                <label for="" class="label-text">Welcome! Please enter your mobile number</label>
              </div>
              <div class="input-group">
                <div class="flex flex-row gap-3">
                  <%= input_dropdown(form: form, field_name: :country_code, options: available_country_codes_list, width: "w-20") %>
                  <div class="flex-grow">
                    <%= input_mobile(form: form, field_name: :mobile_number, placeholder: "Enter your mobile number") %>
                  </div>
                </div>
              </div>
              <div>
                <%= form.button class: "w-full btn-primary"  do %>
                  <span>Get OTP</span>
                <% end %>
              </div>
            </div>
          <% end %>
          <div class="mt-6">
            <%= link_text_component "Login with email and password", new_session_path('user') %><br/>
          </div>
        </div>
        <hr class="mt-1 border-y-2 border-primary"/>
      </div>
    </div>
  </div>
<% end %>
