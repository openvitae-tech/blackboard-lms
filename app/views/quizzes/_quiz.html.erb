<div class="box-shadow-medium flex flex-col  items-center rounded  md:w-[960px]">
  <div class="flex items-center justify-between pt-6">
    <span class="heading page-heading text-primary">Quiz</span>
  </div>
  <div class="flex justify-center gap-4 pt-6">
    <div class="indicator active"></div>
    <div class="indicator"></div>
    <div class="indicator"></div>
  </div>
  <h2 class="flex items-center justify-center pt-4 text-medium">
    1/5 Questions
  </h2>
  <div class="md:w-[910px]">
    <ul class="w-full md:pb-6">
      <li class="carousel-container mt-6">
        <h2 class="bg-primary-light-50 p-6 text-medium text-letter-color-light rounded box-shadow-medium">
          <span>Q.</span><%= quiz.question %>
        </h2>
        <ul class="flex flex-col gap-6 pt-6">
            <li class="">
              <%= input_field(
                radio_field_name: :answer,
                value: quiz.option_a,
                type: "radio_field",
                option: "A. #{quiz.option_a}",
                width: "w-full",
                height: "h-16",
                html_options: {
                  id: "opt-a",
                  data: {
                    action: "change->quiz#valueChanged"
                  },
                  checked: quiz.answer == "A",
                  disabled: true
                }
            ) %>
            </li>

          <li class="">
              <%= input_field(
                radio_field_name: :answer,
                value: quiz.option_b,
                type: "radio_field",
                option: "B. #{quiz.option_b}",
                width: "w-full",
                height: "h-16",
                html_options: {
                  id: "opt-b",
                  data: {
                    action: "change->quiz#valueChanged"
                  },
                  checked: quiz.answer == "B",
                  disabled: true
                }
            ) %>
            </li>

           <li class="">
              <%= input_field(
                radio_field_name: :answer,
                value: quiz.option_c,
                type: "radio_field",
                option: "C. #{quiz.option_c}",
                width: "w-full",
                height: "h-16",
                html_options: {
                  id: "opt-c",
                  data: {
                    action: "change->quiz#valueChanged"
                  },
                  checked: quiz.answer == "C",
                  disabled: true
                }
            ) %>
            </li>

          <li class="">
            <%= input_field(
              radio_field_name: :answer,
              value: quiz.option_d,
              type: "radio_field",
              option: "D. #{quiz.option_d}",
              width: "w-full",
              height: "h-16",
              html_options: {
                id: "opt-d",
                data: {
                  action: "change->quiz#valueChanged"
                },
                checked: quiz.answer == "D",
                disabled: true
              }
          ) %>
        </li>
        </ul>    
      </li>
    </ul>
  </div>
  <% if @enrollment %>
  <p class="pb-4 px-6">    
   <%= answer_text(@enrollment.get_answer(quiz)) %>
  </p>
  <% end %>

</div>