<% if @learning_partner.payment_plan.present? %>
  <%= render "shared/components/modal", modalTitle: t("learning_partner.payment_plan.modify") do %>
    <%= render "form", learning_partner: @learning_partner, payment_plan: @payment_plan,
      url: learning_partner_payment_plan_path(@learning_partner), method: :patch, cancel_path: "#" %>
  <% end %>
<% else %>
  <%= render "shared/components/modal", modalTitle: t("learning_partner.payment_plan.create") do %>
    <%= render "form", learning_partner: @learning_partner, payment_plan: @payment_plan,
    url:  learning_partner_payment_plan_path, method: :post, cancel_path: "#", action_name: "new" %>
  <% end %>
 <% end %> 
