<table class="mt-5 min-w-full rounded px-4 md:px-6 py-4 box-shadow-medium table-fixed">
  <thead class="sticky top-0 z-10 border-b border-line-colour-light bg-white whitespace-nowrap">
  <tr class="text-sm font-medium">
    <th class="pl-4 md:px-6 py-4 text-left w-1/3">Name</th>
    <th class="px-4 md:px-6 py-4 text-center w-1/2">Type</th>
    <th class="py-4 text-center w-1/4 md:w-1/6">Actions</th>
  </tr>
  </thead>
  <tbody id="tag-list" class="bg-white divide-y divide-slate-grey-light">
  <% tags.each do |tag| %>
    <%= render "tags/tag", tag: tag %>
  <% end %>
  </tbody>
</table>
<%= paginate tags %>
