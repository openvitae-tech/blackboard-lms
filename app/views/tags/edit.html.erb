<%= render "shared/components/modal", modalTitle: "Edit Tag" do %>
  <%= form_with(model: @tag, url: tag_path(@tag), method: :patch, class: "flex flex-col gap-6 p-6") do |form| %>
    <%= render "shared/components/form_errors", resource: @tag %>
    <div class="flex flex-col gap-4">
      <%= input_field(form:form, field_name: :name, label: "Name", placeholder: "Enter tag name",type: "text",value: @tag.name, width:"w-full") %>
    </div>

    <div class="flex flex-col gap-4">
      <%= input_dropdown(form:, field_name: :tag_type, label: "Type", options:options_for_select(tag_list, @type)) %>
    </div>
    <div class="flex flex-col gap-6 justify-between heading">
      <%= form.button "Save", class: "bg-primary text-white p-4 rounded" %>
      <%= form.button "Cancel", data: { action: "click->modals#closeModal" } %>
    </div>
  <% end %>
<% end %>