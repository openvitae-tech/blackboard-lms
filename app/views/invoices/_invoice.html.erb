<div class="grid grid-cols-1 md:grid-cols-12 gap-4 items-center py-4 md:px-4 shadow-[0px_0px_4px_0px_#33333329] rounded md:shadow-none">
  <div class="col-span-1 text-xs md:col-span-2 md:text-sm">
    #<%= invoice_id(invoice.id) %>
  </div>
  <div class="col-span-1 text-xs md:col-span-2 md:text-sm">
    â‚¹<%= invoice.amount %>
  </div>
  <div class="col-span-1 text-xs md:col-span-2 md:text-sm">
    <%= formatted_bill_date(invoice.bill_date) %>
  </div>
  <div class="col-span-1 text-xs md:col-span-2 md:text-sm <%= 'text-danger' if invoice.bill_date < Time.zone.now %>">
    <%= due_date(invoice.bill_date) %>
  </div>
  <div class="col-span-1 text-xs md:col-span-2 md:text-sm">
    <%= invoice.status.capitalize %>
  </div>
  <% if current_user.is_owner? %>
    <div class="col-span-1 text-xs md:col-span-2 md:text-sm disabled">
      <%= render "shared/components/button_primary_small", label: t("invoice.pay_now"), tooltip_text: t("invoice.contact_admin") %>
    </div>
  <% end %>
</div>
