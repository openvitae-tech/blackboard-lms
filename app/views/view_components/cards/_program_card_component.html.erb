<div class="rounded-xl border border-line-colour bg-white p-4 w-auto md:w-[312px]">
    <div class="space-y-2">
      <p class="overflow-hidden text-ellipsis line-clamp-2 main-text-lg-semibold h-12">
        <%= name %>
      </p>
      <div class="flex justify-between">
        <div class="flex gap-1 p-0.5">
          <%= icon 'lessons', css: 'w-4 h-4 text-primary' %>
          <p class="general-text-sm-normal"><%= pluralize(courses_count, 'Course') %></p>
        </div>
        <% if is_enrolled %>
        <div class="bg-secondary text-primary-dark px-1 py-0.5 rounded general-text-sm-normal">Enrolled</div>
        <% end %>
      </div>
    </div>
</div>
