<div class="rounded-xl border border-line-colour bg-white p-4">
    <div class="space-y-2">
      <p class="overflow-hidden text-ellipsis line-clamp-2 main-text-lg-semibold">
        <%= name %>
      </p>
      <div class="flex justify-between">
        <div class="flex gap-3 md:gap-1">
          <div class="flex items-center">
            <%= icon("book", css: "h-4 w-4 text-primary") %>
            <span class="ml-2 general-text-sm-normal"><%= pluralize(courses_count, 'Course') %></span>
          </div>
          <div class="w-px h-full bg-slate-grey-light"></div>
          <div class="flex items-center">
            <%= icon("user", css: "h-4 w-4 text-primary") %>
            <span class="ml-2 general-text-sm-normal"><%= pluralize(enroll_count, 'Enrolled') %></span>
          </div>
        </div>
        <%= content_tag :div, class: "bg-secondary text-primary-dark px-1 py-0.5 rounded general-text-sm-normal" do %>
          Enrolled
        <% end if is_enrolled %>
      </div>
    </div>
</div>
