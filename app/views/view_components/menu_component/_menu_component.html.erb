<div class="menu-component-container" data-controller="more-action">
  <button type="button" class="menu-component-button"
          data-action="click->more-action#toggleDropdown" data-more-action-target="menuButton">
    <%= icon("ellipsis-vertical", css: "menu-component-button-icon") %>
  </button>

  <div class="absolute menu-component-list-box hidden menu-component-<%= position %>"
       data-more-action-target="moreMenu"
       <%= tag.attributes(html_options) %>>
    <div class="menu-component-list-items">
      <% menu_items.each do |item| %>
        <%= render "view_components/menu_component/menu_item_#{item.type}", item: item %>
      <% end %>
    </div>
  </div>
</div>
