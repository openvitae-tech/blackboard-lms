<div class="flex justify-end gap-4 py-8">
  <button class="border-primary rounded border px-4 py-2">
    <span class="text-primary text-xs">Previous</span>
  </button>
  <button class="bg-primary flex items-center gap-2 rounded px-4 py-2">
    <span class="text-xs text-white">Complete & Continue</span>
    <span class="icon icon-next h-4 w-4 items-center"></span>
  </button>
</div>

<div class="flex gap-2 justify-end">
  <% prev_link = prev_lesson_path(course, course_module, lesson) %>
  <% if prev_link.blank? %>
    <%= link_to "javascript:void(0);", class: "btn-primary btn-icon btn-disabled" do %>
      <%= render "shared/svg/back" %>
      <span>Back</span>
    <% end %>
  <% else %>
    <%= link_to prev_link, class: "btn-primary btn-icon" do %>
      <%= render "shared/svg/back" %>
      <span>Back</span>
    <% end %>
  <% end %>

  <% next_link = next_lesson_path(course, course_module, lesson) %>
  <%  if next_link.blank? %>
    <%= link_to "javascript:void(0);", class: "btn-primary btn-icon btn-disabled" do %>
      <span>Next</span>
      <%= render "shared/svg/forward" %>
    <% end %>
  <% else %>
    <%= link_to next_link, class: "btn-primary btn-icon" do %>
      <span>Next</span>
      <%= render "shared/svg/forward" %>
    <% end %>
  <% end %>

  <% if policy(lesson).complete? %>
    <%= button_to complete_course_module_lesson_path(course, course_module, lesson), params: { time_spent: 0 }, class: "btn-default btn-icon", data: { action: "click->lessons#completeLesson"} do %>
      <span>Complete and Continue</span>
      <%= render "shared/svg/forward" %>
    <% end %>
  <% end %>
</div>