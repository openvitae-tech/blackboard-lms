<div class="flex flex-col md:basis-3/5">
  <div class="embed-container border-line-colour-light rounded border p-2 xl:h-[226px]">
    <% if @local_content.video.attached? %>
      <% if Rails.env.production? && @video_iframe.present? %>
        <%= @video_iframe.html_safe %>
      <% elsif Rails.env.development? %>
        <%= video_tag rails_blob_path(@local_content.video), controls: true %>
      <% else %>
        <div class="w-full inline-block text-center">Uploaded video is under process. Please refresh the page after some time.</div>
      <% end %>
    <% else %>
      <div class="w-full inline-block text-center">Sorry! Video is not available</div>
    <% end %>
  </div>
  <div class="flex flex-col md:flex-row gap-6 md:justify-between pt-4 pb-6 md:pt-6 md:pb-12">
    <% if lesson.local_contents.size > 1 %>
      <div class="flex justify-start">
        <details class="flex items-center">
          <summary class="flex cursor-pointer items-center justify-between select_language p-2">
            <h2 class="flex flex-col justify-start text-base">
              <span class="text-primary"><%= selected_language %></span>
            </h2>
            <span class="icon icon-down-arrow-green icon-small"></span>
            <span class="icon-up-arrow-green hidden icon-small"></span>
          </summary>
          <ul class="absolute bg-white border border-line-colour-light mt-2 rounded-lg box-shadow-small  w-[178px]">
            <% supported_languages(lesson).each do |key, lang| %>
              <li>
                <%=
                  link_to lang,
                          course_module_lesson_path(course, course_module, lesson, lang: key),
                          class: 'block p-4 text-letter-color-light text-sm border-b border-line-colour bg-slate-grey-light'
                %>
              </li>
            <% end %>
          </ul>
        </details>
      </div>
    <% else %>
      <div class="flex justify-start">
        <div class="select_language p-2">
          <h2 class="text-primary"><%= selected_language %></h2>
        </div>
      </div>
    <% end %>
    <% if policy(lesson).complete? %>
      <div class="flex justify-end">
        <%= link_to complete_course_module_lesson_path(course, course_module, lesson), params: { time_spent: 0 }, class: "bg-primary flex items-center gap-2 rounded px-4 py-3", data: { action: "click->lessons#completeLesson", turbo_method: :post } do %>
          <span class="text-xs text-white">Complete & Continue</span>
          <span class="icon icon-next icon-small"></span>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="bg-primary-light-50 mt-2 flex flex-col gap-4 p-6" data-controller="course-description-card">
    <p class="overflow-hidden text-ellipsis text-xl font-semibold border-b border-line-colour pb-6">Lesson: <%= lesson.title %></p>
    <div class="flex justify-between">
      <p class="overflow-hidden text-ellipsis text-sm font-semibold">Lesson Details</p>
      <button
        class="flex items-center justify-center rounded p-2 bg-primary-light-50"
        data-course-description-card-target="showMoreToggle"
        data-action="click->course-description-card#showMoreToggle"
      >
        <span class="text-xs text-primary">Show more</span>
        <span class="hidden icon-arrow-up icon-small bg-primary" data-course-description-card-target="upArrow"></span>
        <span class="icon icon-arrow-down icon-small bg-primary" data-course-description-card-target="downArrow"></span>
      </button>
    </div>
    <div class="flex gap-2 overflow-hidden show-less-desc text-sm" data-course-description-card-target="courseDescription">
      <div class="h-full overflow-hidden flex text-base">
        <span><%= lesson.rich_description %></span>
      </div>
    </div>
  </div>
  <% if current_user.is_admin? %>
    <div class="flex justify-end gap-4 py-8">
      <% prev_link = prev_lesson_path(course, course_module, lesson) %>
      <% if prev_link.blank? %>
        <%= link_to "javascript:void(0);", class: "border-primary rounded border px-4 py-2 btn-disabled" do %>
          <span class="text-primary text-xs">Previous</span>
        <% end %>
      <% else %>
        <%= link_to prev_link, class: "border-primary rounded border px-4 py-2 " do %>
          <span class="text-primary text-xs">Previous</span>
        <% end %>
      <% end %>
      <% next_link = next_lesson_path(course, course_module, lesson) %>
      <%  if next_link.blank? %>
        <%= link_to "javascript:void(0);", class: "border-primary rounded border px-4 py-2 btn-disabled" do %>
          <span class="text-primary text-xs">Next</span>
        <% end %>
      <% else %>
        <%= link_to next_link, class: "border-primary rounded border px-4 py-2 btn-disabled" do %>
          <span class="text-primary text-xs">Next</span>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
