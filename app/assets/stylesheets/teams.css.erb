.teams-list tbody {
    display: block; 
    max-height: 240px;
    overflow-y: auto; 
}

.teams-list tr {
    display: table; 
    width: 100%;
}

.teams-list th:nth-child(2), .teams-list td:nth-child(2),
.teams-list th:nth-child(3), .teams-list td:nth-child(3) {
    width: 20%; 
}


.teams-list th:nth-child(4), .teams-list td:nth-child(4),
.teams-list th:nth-child(5), .teams-list td:nth-child(5) {
    width: 15%; 
}